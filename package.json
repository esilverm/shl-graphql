{
  "name": "shl-supergraph",
  "version": "1.0.0",
  "description": "Supergraph implementation of SHL apis",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --max-warnings=0 --ext .js,.ts,.json .",
    "compile": "tsc",
    "start": "nodemon",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "npm run codegen -- --watch",
    "prestart": "npm run codegen",
    "precompile": "npm run codegen",
    "postinstall": "npm run codegen"
  },
  "dependencies": {
    "@apollo/server": "^4.0.1",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.7",
    "@graphql-codegen/typescript": "2.7.5",
    "@graphql-codegen/typescript-resolvers": "2.7.5",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.4"
  }
}
